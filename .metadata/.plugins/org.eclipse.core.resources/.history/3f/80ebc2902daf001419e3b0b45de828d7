package com.codey.OpenGL;
import org.apache.commons.math3.geometry.euclidean.threed.Vector3D;

public class GravitationalForce extends ForceField {

	public GravitationalForce(double gravitationalConstant) {
		super(gravitationalConstant);
	}
	
	@Override
	public Vector3D forceAtPoint(Vector3D position) {
		Vector3D vector;
		double magnitude = position.getNorm();
		vector = position.subtract(new Vector3D(960, 540, 0)).normalize().scalarMultiply(-1).scalarMultiply(forceConstant / (magnitude * magnitude));
		return vector;
	}

}
