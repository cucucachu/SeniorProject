package com.codey.OpenGL;

import org.lwjgl.LWJGLException;

public class Launcher {

	public static final int WIDTH = 800;
	public static final int HEIGHT = 600;
	public static final int FRAME_RATE = 32;
	
	public static Painter picaso;
	
	public static Moon moon;
	public static ForceField spring;
	
	public static void main(String[] args) {
		try {
			launch();
		}
		catch (Exception ex) {
			System.out.println(ex.getMessage());
			ex.printStackTrace();
			return;
		}
	}
	
	public static void launch() throws LWJGLException, Exception {
		LibraryLoader.loadNativeLibrary();
		picaso = new Painter(WIDTH, HEIGHT, FRAME_RATE);
		modelSetup();
		run();
		picaso.janitor();
	}
	
	public static void modelSetup() {
		moon = new Moon(100.0, 0.0, 1.0);
		spring = new ForceField(0.01);
	}
	
	public static void run() {	
		double force;
		
		while(!picaso.isCloseRequested()) {
			picaso.checkForDisplayResize();
			force = spring.forceAtPoint(moon.getPosition());
			moon.step(1, force);
			picaso.clear();
			picaso.drawSquare(moon.getPosition(), HEIGHT/2, 20);
			picaso.render();
		}
	}
}
